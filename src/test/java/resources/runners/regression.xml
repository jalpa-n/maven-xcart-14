<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="testsuite" verbose="1" >
    <groups>
        <run>
            <include name="regression"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.xcart.mobile.customlistners.CustomListeners"></listener>
        <listener class-name="org.uncommons.reportng.HTMLReporter"></listener>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"></listener>

    </listeners>

    <test name="Regression Test" >
        <classes>
            <class name="com.xcart.mobile.testsuite.homepage.TopMenuTest"></class>
            <class name="com.xcart.mobile.testsuite.hotdeals.HotDealTest"></class>
            <class name="com.xcart.mobile.testsuite.shopping.ShoppingTest"></class>


        </classes>
    </test>


</suite>
